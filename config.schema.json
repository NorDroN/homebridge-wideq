{
  "pluginAlias": "WideQ",
  "pluginType": "platform",
  "headerDisplay": "The **wideq** package must be installed on your system for this plugin to work.",
  "footerDisplay": "For help please see the [wiki](https://github.com/NorDroN/homebridge-wideq).",
  "schema": {
    "refresh_token": {
      "title": "Refresh token",
      "type": "string",
      "required": true
    },
    "country": {
      "title": "Country",
      "type": "string",
      "default": "US",
      "required": true
    },
    "language": {
      "title": "Language",
      "type": "string",
      "default": "en-US",
      "required": true
    },
    "interval": {
      "title": "Interval",
      "type": "integer",
      "default": 10,
      "required": true
    },
    "refrigeratorControlType": {
      "title": "Refrigerator Control Type",
      "type": "boolean",
      "default": "binary",
      "oneOf": [
        { "title": "Binary", "enum": ["binary"] },
        { "title": "Key (Legacy)", "enum": ["key"] }
      ],
      "required": false
    },
    "debug": {
      "title": "Enable Debug Mode?",
      "type": "boolean",
      "default": false
    }
  }
}
